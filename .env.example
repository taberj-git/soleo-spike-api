# =============================================================================
  # SERVER CONFIGURATION
  # =============================================================================
  # Port number the server listens on (valid range: 1-65535)
  PORT=3000

  # Node environment: development|test|production
  # Affects error messages, logging verbosity, and security settings
  NODE_ENV=development

  # =============================================================================
  # HTTPS CONFIGURATION
  # =============================================================================
  # Enable HTTPS mode (true|false)
  # When true, SSL_KEY_PATH and SSL_CERT_PATH are required
  USE_HTTPS=false

  # Path to SSL private key file (required if USE_HTTPS=true)
  # For development: Use self-signed cert (see README for generation)
  # For production: Use valid cert from CA (Let's Encrypt, etc.)
  SSL_KEY_PATH=./certs/server.key

  # Path to SSL certificate file (required if USE_HTTPS=true)
  SSL_CERT_PATH=./certs/server.cert

  # =============================================================================
  # LOGGER CONFIGURATION
  # =============================================================================
  # Logger implementation to use
  # Options:
  #   - winston: Production-grade logging with file rotation (recommended)
  #   - default: Simple console logger
  #   - test: Mock logger for testing (no output)
  LOGGER_TYPE=winston

  # Logging verbosity level
  # Options: trace|debug|info|warn|error|fatal
  # Development: debug or trace
  # Production: info or warn
  LOG_LEVEL=debug

  # =============================================================================
  # AUTHENTICATION & ACCESS CONTROL
  # =============================================================================
  # Authentication provider type
  # Options:
  #   - AZURE: Azure AD authentication (only current option)
  #   - Future: AWS, KEYCLOAK, AUTH0, etc.
  ACCESS_PROVIDER=AZURE

  # JWT secret key for token signing/verification
  # IMPORTANT: Generate a strong random string (min 32 characters)
  # Production: Store in Azure Key Vault or AWS Secrets Manager
  # Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
  JWT_SECRET=your-secret-key-change-this-in-production

  # =============================================================================
  # CORS CONFIGURATION
  # =============================================================================
  # Comma-separated list of allowed origins for CORS
  # Development: Include localhost with various ports
  # Production: Only include your production domains
  # Example: https://app.example.com,https://admin.example.com
  CORS_ALLOWED_ORIGINS=http://localhost:5173,https://localhost:5173

  # =============================================================================
  # RATE LIMITING CONFIGURATION
  # =============================================================================
  # All window values are in milliseconds
  # 900000 = 15 minutes, 3600000 = 1 hour

  # Authentication endpoints (login/logout/authorize)
  # Prevents brute force attacks
  AUTH_RATE_LIMIT_WINDOW=900000    # 15 minutes
  AUTH_RATE_LIMIT_MAX=5            # Max 5 attempts per window

  # General API endpoints
  # Prevents DoS attacks
  API_RATE_LIMIT_WINDOW=900000     # 15 minutes
  API_RATE_LIMIT_MAX=100           # Max 100 requests per window

  # File upload endpoint
  # More restrictive to prevent storage abuse
  UPLOAD_RATE_LIMIT_WINDOW=3600000 # 1 hour
  UPLOAD_RATE_LIMIT_MAX=10         # Max 10 uploads per hour

  # File download endpoint
  # Prevents bandwidth abuse
  DOWNLOAD_RATE_LIMIT_WINDOW=900000  # 15 minutes
  DOWNLOAD_RATE_LIMIT_MAX=50         # Max 50 downloads per window

  # =============================================================================
  # STORAGE CONFIGURATION
  # =============================================================================
  # Storage provider for file uploads
  # Options:
  #   - LOCAL: Local filesystem (development/testing)
  #   - AZURE: Azure Blob Storage
  #   - AWS: Amazon S3 (framework ready, needs implementation)
  #   - GOOGLE: Google Cloud Storage (framework ready, needs implementation)
  STORAGE_PROVIDER=LOCAL

  # Local storage path (used when STORAGE_PROVIDER=LOCAL)
  # Must be writable by the application
  # Default: /tmp/uploads
  LOCAL_STORAGE_PATH=/tmp/uploads

  # File integrity checking mode
  # Options:
  #   - NONE: No validation (not recommended)
  #   - SIZE: Verify file size only (fast)
  #   - SHA256: Calculate SHA256 hash (secure, slower)
  INTEGRITY_MODE=SHA256

  # Maximum file upload size in bytes
  # Default: 104857600 (100MB)
  # Examples:
  #   - 10MB: 10485760
  #   - 50MB: 52428800
  #   - 100MB: 104857600
  #   - 500MB: 524288000
  MAX_FILE_SIZE=104857600

  # =============================================================================
  # CLOUD PROVIDER SPECIFIC (Optional - only needed for cloud deployments)
  # =============================================================================
  # Azure-specific configuration (when STORAGE_PROVIDER=AZURE)
  # AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
  # AZURE_STORAGE_CONTAINER_NAME=uploads
  # AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;...
  # AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
  # AZURE_TENANT_ID=your-tenant-id
  # AZURE_CLIENT_ID=your-client-id

  # AWS-specific configuration (when STORAGE_PROVIDER=AWS)
  # AWS_REGION=us-east-1
  # AWS_S3_BUCKET=your-bucket-name
  # AWS_ACCESS_KEY_ID=your-access-key
  # AWS_SECRET_ACCESS_KEY=your-secret-key

  # Google Cloud-specific configuration (when STORAGE_PROVIDER=GOOGLE)
  # GCP_PROJECT_ID=your-project-id
  # GCP_BUCKET_NAME=your-bucket-name
  # GCP_CREDENTIALS_PATH=/path/to/service-account-key.json

  # =============================================================================
  # DEPLOYMENT & ENVIRONMENT
  # =============================================================================
  # Deployment environment (affects error messages and logging)
  # Options: DEV|TEST|STAGING|PRODUCTION
  # DEV: Shows detailed errors, verbose logging
  # PRODUCTION: Hides error details from clients, minimal logging
  DEPLOYMENT=DEV

